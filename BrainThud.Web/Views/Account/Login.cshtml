@{
    ViewBag.HideNavBar = true;    
}

<div class="row-fluid">
    <div class="span12">
        <div class="span4 hidden-phone login-logo">
            <img src="~/Images/logo_medium.jpg" />
        </div>
        <div class="span8">
            <div class="colored-content-block center-align login-instructions">
                <h3>Click below to log in with a trusted identity provider</h3>
                Your BrainThud account will automatically be created for you when you log in
            </div>
            <div>
            <div class="center-align content-block login-instructions">
                <div id="IPDiv" />
            </div>
            </div>

            <div class="alert alert-success center-align login-instructions">
                <strong>Don't worry</strong> the identity providers will <em>never</em> give us access to your credentials or your personal information
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/scripts/account.js")
    <script src="@ViewBag.MetaDataScript" type="text/javascript"></script>
}
