<div class="row-fluid">
    <div class="span12">
        <input id="new-card-deckname-@(ViewBag.EditorName)" type="text" placeholder="Deck Name" class="stretch" data-bind="value: deckName" />
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <input id="new-card-tags-@(ViewBag.EditorName)" type="text" placeholder="Tags (separate tags with commas)" class="stretch" data-bind="value: tags" />
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <div id="wmd-button-bar-question-@(ViewBag.EditorName)"></div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <textarea id="wmd-input-question-@(ViewBag.EditorName)" class="large" placeholder="Question" data-bind="value: question"></textarea>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div id="wmd-preview-question-@(ViewBag.EditorName)" class="wmd-preview"></div>
    </div>
</div>
    
<div class="row-fluid">
    <div class="span12">
        <div id="wmd-button-bar-answer-@(ViewBag.EditorName)"></div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <textarea id="wmd-input-answer-@(ViewBag.EditorName)" class="large" placeholder="Answer" data-bind="value: answer"></textarea>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div id="wmd-preview-answer-@(ViewBag.EditorName)" class="wmd-preview"></div>
    </div>
</div>