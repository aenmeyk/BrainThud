<section id="quiz-card-view" class="view">

    <div class="row-fluid card-toolbar">
        <div class="span9">
            <div class="strong" data-bind="html: card().deckName"></div>
        </div>
        <div class="span3">
            <button type="button" class="btn btn-primary right-align card-toolbar-button" data-bind="click: showNextCard">
                <i class="icon-forward icon-white"></i>
            </button>
            <button type="button" class="btn btn-primary right-align card-toolbar-button" data-bind="click: showPreviousCard">
                <i class="icon-backward icon-white"></i>
            </button>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <span class="quiz-card question span12" data-bind="html: card().currentSideText, css: borderCss"></span>
            <span class="text-small progress-indicator"><span data-bind="html: displayIndex()"></span> of <span data-bind="html: cardCount()"></span></span>
            @Html.Partial("_card-mini-menu")
        </div>
    </div>


    <div class="row-fluid quiz-control-box">
        <div class="span4">
            <button type="button" class="primary-button btn btn-primary" data-bind="click: flipCard">Flip Card</button>
        </div>
        <div class="span4">
            <button type="button" class="primary-button btn btn-success" data-bind="command: correctCommand, activity: correctCommand.isExecuting">Correct</button>
        </div>
        <div class="span4">
            <button type="button" class="primary-button btn btn-danger" data-bind="command: incorrectCommand, activity: incorrectCommand.isExecuting">Incorrect</button>
        </div>
    </div>

    @*        <span data-bind="text: ko.toJSON(card)"></span>*@
</section>
