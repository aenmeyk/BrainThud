<div id="card-info-dialog" class="modal hide fade">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Card Information</h3>
    </div>
    <div class="modal-body">
        <div class="content-block">
            <div>
                <span>Deck name:</span>
                <span class="double-space strong" data-bind="html: card().deckName()"></span>
            </div>
            <div>
                <span>Card level:</span>
                <span class="double-space strong" data-bind="html: card().level()"></span>
            </div>
        </div>
        <div class="content-block skip-line">
            <div>
                <span>Next quiz date:</span>
                <span class="double-space strong" data-bind="html: card().localizedQuizDate()"></span>
            </div>
            <div>
                <span>Previous quiz date:</span>
                <span class="double-space strong" data-bind="html: card().previousQuizDate()"></span>
            </div>
            <div>
                <span>Previous quiz result:</span>
                <span class="double-space strong" data-bind="html: card().previousQuizAnswer(), css: { correctColor: card().answerIsCorrect() === true, incorrectColor: card().answerIsCorrect() === false }"></span>
            </div>
        </div>
        <div class="skip-line small-text">
            <span>Tags:</span>
            <span class="double-space" data-bind="html: card().tags()"></span>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary" data-dismiss="modal">Close</a>
    </div>
</div>
