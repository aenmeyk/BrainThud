<section id="create-card-view" class="view">
    @*<span data-bind="text: ko.toJSON($data)"></span>*@

    @RenderPage("Shared/successMessage.cshtml", "Your card has been created")

    <div class="row-fluid">
        <div class="span1">Deck Name</div>
        <div class="span11">
            <input class="large" data-bind="value: deckName, event: { keyup: hideSuccess }"></input>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span1">Tags</div>
        <div class="span11">
            <input class="large" data-bind="value: tags, event: { keyup: hideSuccess }"></input>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span1">Question</div>
        <div class="span11">
            <textarea class="large" data-bind="value: question, event: { keyup: hideSuccess }"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span1">Answer</div>
        <div class="span11">
            <textarea class="large" data-bind="value: answer, event: { keyup: hideSuccess }"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <button type="button" class="btn right-align" data-bind="click: saveCard">Create & New</button>
        </div>
    </div>
</section>
