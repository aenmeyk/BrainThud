<section id="create-card-view" class="view">
    @*<span data-bind="text: ko.toJSON($data)"></span>*@

    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Well done!</strong> You successfully read this important alert message.
    </div>

    <div class="row-fluid">
        <div class="span4">Question</div>
        <div class="span8">
            <textarea data-bind="value: question"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">Answer</div>
        <div class="span8">
            <textarea data-bind="value: answer"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <button type="button" class="btn" data-bind="click: saveCard">Create</button>
        </div>
    </div>
</section>
