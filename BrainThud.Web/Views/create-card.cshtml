<section id="create-card-view" class="view">
    @*<span data-bind="text: ko.toJSON($data)"></span>*@

    @RenderPage("Shared/successMessage.cshtml", "Your card has been created")

    <div class="row-fluid">
        <div class="span12">
            <input type="text" placeholder="Deck Name" class="stretch" data-bind="value: deckName, event: { keyup: hideSuccess }" />
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <input type="text" placeholder="Tags (separate tags with commas)" class="stretch" data-bind="value: tags, event: { keyup: hideSuccess }" />
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <textarea class="large" placeholder="Question" data-bind="value: question, event: { keyup: hideSuccess }"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <textarea class="large" placeholder="Answer" data-bind="value: answer, event: { keyup: hideSuccess }"></textarea>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <button type="button" class="btn right-align" data-bind="click: saveCard">Create & New</button>
        </div>
    </div>
</section>
