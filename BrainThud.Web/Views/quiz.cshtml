<section id="quiz-view" class="view">

    <div class="row-fluid">
        <div class="span12">
            <h1 data-bind="html: pageTitle"></h1>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8 offset2 colored-content-block quiz-details">
            <div>
                <h3 data-bind="html: quizDate"></h3>
            </div>
            <div class="strong">
                <span data-bind="html: completedCardCount"></span> of 
                <span data-bind="html: cardCount"></span> cards completed
            </div>
            <div class="correct-color strong">
                <span data-bind="html: correctCardCount"></span> correct
            </div>
            <div class="incorrect-color strong">
                <span data-bind="html: incorrectCardCount"></span> incorrect
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4 offset2">
            <button type="button" class="primary-button btn btn-primary right-align" data-bind="click: startQuiz, disable: isStartDisabled(), css: { disabled: isStartDisabled() } ">
                <span data-bind="html: startQuizLabel"></span>
            </button>
        </div>
        <div class="span4">
            <button type="button" class="primary-button btn" data-bind="click: shuffleCards">
                <span>Shuffle Cards</span>
            </button>
        </div>
    </div>

    @*        <span data-bind="text: ko.toJSON(currentCard)"></span>*@
</section>
