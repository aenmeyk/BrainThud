<section id="quiz-view" class="view">

    <div class="row-fluid">
        <div class="card question span12" data-bind="text: currentCardText, click: flipCard, css: { question: questionSideVisible(), answer: !questionSideVisible() }"></div>
    </div>

    <div class="row-fluid">
        <form class="span6" data-bind="attr: { action: nextCard }">
            <button type="submit" class="primary-button btn btn-success">Correct</button>
        </form>
        <form class="span6" data-bind="attr: { action: nextCard }">
            <button type="submit" class="primary-button btn btn-danger">Incorrect</button>
        </form>
    </div>

@*        <span data-bind="text: ko.toJSON(currentCard)"></span>*@
</section>
