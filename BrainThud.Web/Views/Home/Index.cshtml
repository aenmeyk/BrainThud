@{
    const string TAG_LINE = "Flashcards done right";
    ViewBag.Title = "BrainThud - " + TAG_LINE;
    Layout = "~/Views/Shared/_public-layout.cshtml";
    ViewBag.HideNavBar = true;
}

<div class="row-fluid">
    <div class="span12">
        <img class="image-center-align home-logo" src="~/Images/logo-and-title-top-280.png" />
    </div>
</div>
<div class="row-fluid skip-line">
    <div class="span12">
        <h2 class="center-align">@TAG_LINE</h2>
        <div class="center-align strong">(Beta)</div>
    </div>
</div>
<div class="row-fluid skip-line">
    <div class="span3 offset1">
        @Html.ActionLink("Browse Flashcards", "Index", "Cards", null, new { @class = "btn btn-warning primary-button" })
    </div>
    <div class="span4">
        @Html.ActionLink("Sign Up", "Login", "Account", null, new { @class = "btn btn-primary primary-button" })
    </div>
    <div class="span3">
        @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "btn btn-success primary-button" })
    </div>
</div>
