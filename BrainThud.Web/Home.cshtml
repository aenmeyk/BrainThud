<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <title>BrainThud</title>
    <link rel="stylesheet" href="Content/bootstrap.min.css">
    <style>
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <header>
            <h1>BrainThud</h1>
            <nav id="shell-top-view" class="main-nav">
                <div class="accent-top" data-bind="text: currentUser().fullName"></div>
                <div class="accent-left"></div>
                <ul data-bind="if: $data">
                    <li class="route-top"><a href="#/today">Today's Nuggets</a></li>
                    <li class="route-top"><a href="#/manage">Manage Nuggets</a></li>
                </ul>
            </nav>
        </header>
        <section>
            @this.RenderPage("Views/today.cshtml")
        </section>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="Scripts/lib/jquery-1.8.0.min.js" type="text/javascript">')</script>
        <script data-main="/scripts/app/main" src="Scripts/lib/require.js" type="text/javascript"></script>
                @Scripts.Render("~/bundles/jsapplibs")
        </body>
</html>
